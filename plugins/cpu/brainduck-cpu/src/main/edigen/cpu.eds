root instruction;

instruction = "halt": 00000000 |
               "> (P++)": 00000001 |
               "< (P--)": 00000010 |
               "+ (*P++)": 00000011 |
               "- (*P--)": 00000100 |
               ". (print)": 00000101 |
               ", (load)": 00000110 |
               "[ (loop)": 00000111 |
               "] (endloop)": 00001000;

%%

"%s" = instruction;

