        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>rasp-cpu</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>ssem-cpu</artifactId>
        <version>${project.version}</version>
