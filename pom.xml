      <!-- cpus -->
      <dependency>
        <groupId>net.sf.emustudio</groupId>
        <artifactId>8080-cpu</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>net.sf.emustudio</groupId>
